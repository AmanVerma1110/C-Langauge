	#include<stdio.h>

int main()

{
	
	float price, totalprice = 0;
	printf("Please Enter a price:: ");
	scanf("%f",&price);
	
    do
	{
		totalprice = totalprice + price;
		printf("Please enter a price :: ");
		scanf("%f",&price);
	}	while(price != 0)
	
	printf("Total order price = %.2lf \n", totalprice);
	
	return 0;
}
