#include<stdio.h>
#include<stdlib.h>


/*  Sum of Arithmetic Sequence:: Sn = (a1+an)*n/2 */

int main()
{
	float an,a1,Sn;
	int n;
	
	printf("Enter the initial term :: a1 \n");
	scanf("%f",&a1);
	printf("Enter the nth term  :: an \n");
	scanf("%f",&an);
	printf("Enter the number of elements in the Arithmetic Sequence :: n \n");
	scanf("%d",&n);
	
	Sn = (a1 + an) * n / 2 ;
	
	printf("The Sum of your Sequence :: Sn = %.2f \n");
	
	return 0;
	
 } 
