#include<stdio.h>
#include<stdlib.h>
#include<math.h>


/*  Arithmetic sequence formula :: an = a1+(n-1)d */

int main()
{
	int an,a1,n,d;
	
	printf("enter the first term in the sequence :: a1 \n");
	scanf("%d",&a1);
	printf("enter the common difference between terms :: d \n");
	scanf("%d",&d);
	printf("enter the munber of term :: n \n");
	scanf("%d",&n);
	
	an = a1+(n-1)*d;
	
	printf("Result :: an = %d \n");
	
	return 0;
	
 } 
